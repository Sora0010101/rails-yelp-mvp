
<%= form_with model: restaurant, local: true do |form| %>
  
  <div class="field">
    <%= form.label :name %>
    <%= form.text_field :name %>
  </div>

  <div class="field">
    <%= form.label :address %>
    <%= form.text_field :address %>
  </div>

  <div class="field">
    <%= form.label :phone_number %>
    <%= form.text_field :phone_number %>
  </div>

  <div class="field">
    <%= form.label :category %>
    <%= form.select :category, ["chinese", "italian", "japanese", "french", "belgian"] %>
  </div>

  <div class="actions">
    <%= form.submit %>
  </div>
<% end %>
